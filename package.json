{
  "name": "exceptionbag",
  "description": "Error composition and utility library",
  "version": "1.0.2",
  "author": {
    "name": "Marko Kovacevic",
    "email": "doppelganger113@gmail.com"
  },
  "keywords": [
    "error",
    "exception",
    "composition",
    "utility",
    "axios"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/doppelganger113/exceptionbag"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "files": [
    "./dist"
  ],
  "engines": {
    "node": ">=8"
  },
  "lint-staged": {
    "src/*": "prettier --write --ignore-unknown"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint ./src --ext .ts --quiet --fix",
    "format": "prettier --write ./src/**/*",
    "format:check": "prettier --check ./src/**/*",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "clean": "rimraf ./dist",
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "prepare": "husky install",
    "check": "npm run format && npm run lint && npm test && npm run build"
  },
  "peerDependencies": {
    "reflect-metadata": "0.*"
  },
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/jest": "27.5.0",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "axios": "0.27.2",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.1.5",
    "eslint-plugin-unused-imports": "2.0.0",
    "express": "4.17.3",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "jest-junit": "13.2.0",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "typescript": "4.6.4",
    "@opentelemetry/sdk-node": "0.31.0",
    "nestjs-otel": "3.0.4"
  }
}
